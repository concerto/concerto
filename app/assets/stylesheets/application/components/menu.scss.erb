/*##########  STRUCTURE  ##########*/

.container-fluid {
	margin-left: $menuWidth;
	transition: margin 1s;
}

nav.minimized + .container-fluid {
	margin-left: $menuMinWidth;
	transition: margin 1s;
}

nav {
	width: $menuWidth;
	max-width: $menuWidth;
	height: 100%;
	float: left;
	background-color: $menuColor;
	position: fixed;
	top: 0;
	bottom: 0;
	transition: max-width 1s;
	overflow: auto;
	z-index: 9;

	// Force link to not underline
	a {
		padding: 10px 9px;
		border-left:  3px solid transparent;
		text-decoration: none !important;
		white-space: nowrap;
		&.selected {
			border-color: $red;
			background-color: lighten($menuColor, 10%);
		}

		i {
			display: inline-block;
			margin-right: 10px;
			font-size: 16px;
			text-align: center;
			width: 20px;
		}
	}

	#menu-logobutton {
		display: block;
		&.selected{
			color: $grayLightest;
			border-color: transparent;
		}
	}


	& > p {
		font-size: 15px;
		color: $gray;
		padding: 12px;
		a {
			padding: 0;
		}
	}

	// Triple bars collapse menu
	#menu-collapse {
		i {
			transition: transform 1s;
		}
		color: $grayLight;
		display: block;
		margin-bottom: 10px;

		&:hover {
			box-sizing: padding-box;
			background-color: $menuColorHover;
			color: $grayLight;
		}
	}

	section {

		.menu-title > h1 {
			margin-left: 15px;
			text-transform: uppercase;
			font-size: 15px;
			color: $grayLight;
			letter-spacing: 0.1em;
			white-space: nowrap;
			text-overflow: '.';
		}

		.menu-account > a, .menu-actions > a {
			display: block;
			font-size: 15px;
			color: $gray;

			&:hover {
				box-sizing: padding-box;
				background-color: $menuColorHover;
				color: $grayLight;
			}

			&:last-of-type {
				margin-bottom: 15px;
			}
		}

		// The "before last" child must have padding bottom to not be below account informations
		&:nth-last-child(3){
			padding-bottom: 190px;
		}
	}

	.menu-bottom {
		color: $grayLight;
		position: fixed;
		bottom: 0;
		// -16px for scrollbar size
		width: $menuWidth;
		max-width: $menuWidth;
		background: $menuColor;
		transition: max-width 1s;
		h2 {
			font-size: 15px;
		}
		a {
			display: block;
			&:hover {
				color: $grayLight;
			}
			color: $gray;
		}
		.menu-account-rights {
			margin: 12px 12px;
		}
	}
}

nav.minimized {
	max-width: $menuMinWidth !important;
	transition: max-width 1s;
	overflow: hidden;
	h1 {
		font-size: 0 !important;
		&:first-letter {
			font-size: 18px !important;
		}
	}

	span {
		display:none;
	}

	#menu-logobutton {
		font-size: 20px !important;
	}

	#menu-collapse i {
		transform: rotate(180deg);
		transition: transform 1s;
	}
	.menu-account-rights i {
		display: block;
	}

	.menu-bottom {
		max-width: $menuMinWidth;
		background: $menuColor;
		transition: max-width 1s;
	}
}

// Media queries for mobile phones
@media (max-width: 767px) {
	nav.minimized {
		overflow: auto;
	}
}

.no-animation {
	transition: all 0s !important;
	> * {
		transition: all 0s !important;
	} & + .container-fluid {
		transition: all 0s !important;
	}
}