/*##########################################################################*/
/*  Display Blocks  */
/*##########################################################################*/


// viewblock
.viewblock {
  display: block;
  margin-bottom: 18px;
	background: $white;
	border: solid 1px $grayLighter;
	border-top: solid 2px $grayLight;

	.viewblock-header {
    display: block;
    padding: 5px;
		border-bottom: solid 1px $grayLighter;

    &.light-version {
      // @include vertical-gradient( $grayLightest, $grayLighter );
    }

   	h1 {
   		color: $grayDarker;
   		font-size: 1.4em;
   		letter-spacing: 0.05em;
			font-variant: small-caps;
		}

    a:not(.button) {
      color: $concerto-blue-1;
    }

    .default-padding {
      padding: 8px 14px 5px 14px;
    }

		// element inside the header that can be optionally used for right-aligned
		// contextual buttons relevant to this section of the page
		.viewblock-header_right {
	  	float: right;
	  	margin-left: 20px;

      .button-padding {
				padding: 5px;
			}
		}

    // status element that fits a label and a value, usually a count
    // often aligned or floated to the right side of .viewblock-header_right
    .status-block {
      background: $grayLightest;
      height: 100%;
      padding: 4px 8px;
      float: left;
      line-height: normal;
      border-left: solid 1px $grayLight;

      > label {
        display: block;
        color: $gray;
        text-align:center;
        font-size: 0.8em;
        line-height: normal;
      }

      > span {
        display: block;
        text-align: center;
        line-height: normal;
      }
    }

    .status-block:last-child {
      @include border-radius(0px 8px 0px 0px);
    }

		// this element is only included when the back_button helper is used to place a back button
		.viewblock-header_back {
	  	float: left;
	  	margin: 7px 8px 7px -12px;
		}

	}

	.viewblock-cont {
  	padding: 0px;
    @include clearfix();
	}

  // .subnav is a light blue bar that appears below the content header
  .subnav {
    padding:2px 12px;
    border-bottom: 1px solid $concerto-blue-5;

    h4 {
      text-transform: uppercase;
      letter-spacing: 0.1em;
      line-height: 1.8em;
    }

    .nav {
      margin: 0px;
    }

    a.button {
      background:$concerto-blue-0;
      color: $white !important;
      font-size: 0.8em;
      border: 0px;
      padding: 4px 6px;
      text-shadow: 0px 0px 0px;
    }

		a{
			color: $gray;
			font-weight: normal;
		}

    .nav-pills {
      padding-top: 2px;
      margin-bottom: 0px;

      > li > a {
        margin: 0px;
        padding: 0px 4px;
        line-height: 22px;

        .count {
          font-size: 0.8em;
        }

        &:hover {
          background: $white;
          text-decoration: none;
        }

      }

      li.legend {
        font-size: 0.8em;
        text-transform: uppercase;
        padding: 3px 3px 0px 3px;
      }

    }

    // Give the tabs something to sit on
    .nav-tabs {
      border-bottom: 0px; //1px solid #ddd;
    }
    // Make the list-items overlay the bottom border
    .nav-tabs > li {
      margin-bottom: -3px;
    }
    // Actual tabs (as links)
    .nav-tabs > li > a {
      padding-top: 8px;
      padding-bottom: 8px;
      line-height: $baseLineHeight;
      border: 1px solid transparent;
      &:hover {
        background: none;
				color: $grayDark;
      }
    }
    // Active state, and it's :hover to override normal :hover
    .nav-tabs > .active > a, .nav-tabs > .active > a:hover {
      color: $concerto-blue-1;
      font-weight: bold;
			box-shadow: inset 0 -2px 0 0 $concerto-blue-1;
      cursor: default;
    }

  }

}


// subblock
.subblock {
  &.bordered {
    border: solid 1px $grayLight;
    @include border-radius(6px);
  }

  &.with-padding {
    padding: 18px;
  }

}

#gem-frozen {
	margin: 5px;
	padding: 5px;
	border-radius: 5px;
	background: #ffe270;
	border: 1px dashed #333;
	color: black;
	text-align: justify;
}
