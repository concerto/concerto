/*##########################################################################*/
/*  Top Menu  */
/*##########################################################################*/


//////////////////

/*##########  STRUCTURE  ##########*/

#top-menu {
 	width: 100%;
  background-color: $grayLightest;
  border-bottom: solid 1px $gray;
  z-index: 2;
  position: relative;
  @include clearfix();

 	.btn {

		// custom attributes:
		@include border-radius(2px);

    // IE fix: reset Microsoft filter attribute:
    filter: none;

   	color: #666;
   	margin: 0px 2px;
    padding: 6px 12px;
    font-size: 13px;
   	border: solid 1px #999;
		float: left;

   	&:hover {
   		color: $white !important;
      background-color: $concerto-blue-0;
      transition: background .2s;
      .badge {
        color: $white;

        &.action {
          background-color: $red;
        }
      }
		}

    &:active {
   		border: solid 1px #333;
		}

		&:visited {
			color:#666;
		}

		&.selected {
    	text-decoration: none;
    	color: $white;
    	border: solid 1px #333;
      background-color: $primary;

			&:active {
				color: $white !important;
      }

      &:hover {
        background-color: $primaryDark;
      }

		}

	}

  .badge {
    background-color: $grayDark;
    color: $grayLighter;

    &.action {
      background-color: darken($red, 10%);
    }
  }

	#top-menu-logobutton {
    @include vertical-gradient($concerto-blue-0, $concerto-blue-2);
    float: left;
    color: $white;
    padding: 7px 15px;
    margin-right: 5px;
    font-weight: bold;
    vertical-align: middle;
    height: 100%;

    i.concertocon-logobutton {
      opacity: 0.6;
    }

    &.selected {
      background: $concerto-blue-0;
      color: $white;
      position: relative;

      i.concertocon-logobutton {
        opacity: 1.0;
      }

      &:after {
        content: ' ';
        height: 0;
        position: absolute;
        width: 0;
        top: 100%;
        left: 50%;
        margin-left: -10px;

        border: 10px solid transparent;
        border-top-color: $concerto-blue-0;
      }
    }

    // apply new background position on hover to show "lit up" version of logo bg:
    &:hover i.concertocon-logobutton {
      opacity: 1.0;
      text-decoration: none;
    }
    &:hover {
      text-decoration: none;
    }
  }

  #top-menu-logintext {
    float: left;
    padding: 4px 12px;
    margin: 0px;
    color: $gray;
    font-size: 0.85em;
  }

  #top-menu-user {

    i {
      display: block;
      margin: 2px 0px;
    }

    h2 {
      text-transform: uppercase;
      font-size: 17px;

      a {
        color: $gray;
        letter-spacing: 0.15em;
      }
      a:hover{
        color: $grayDark;
      }
    }

    .pull-left {
      padding-top: 2px;
      margin-right: 12px;
    }

    .pull-right {
      margin-right: 8px;
      a:hover{
        text-decoration: none !important;
      }
      p {
        font-size: 1em;
      }
    }
  }

	// each part of the menu is a "section"
	section {
  	float: left;
  	margin: 0px;
    padding: 4px 5px 0 5px;

    &:not(:last-of-type){

      border-right:solid 1px $grayLight;
    }

    &.right {
      float: right;
    }

		.top-menu-sectop {
      padding: 5px 2px;
      margin-bottom: 3px;
		}

    .top-menu-secbot {

			h1 {
				color: $grayDark;
		  	font-size: 0.75em;
		  	font-weight: 400;
		  	padding: 6px 0px;
		  	text-transform: uppercase;
		  	letter-spacing: 0.3em;
		  	text-align: center;
        margin-top: 25px;
			}

		}

	}

}


@media (max-width: 662px) {
	#top-menu-user {
		text-align: center;
		margin-left: .5em;
	}

	.floatleft {
		float: left !important;
	}

	.clearleft {
		clear: left;
	}

	.pull-right {
		padding-top: 9px !important;
	}

	.ilb {
		display: inline-block;
	}

	.wpadding1em {
		padding-left: 1em;
	}

	.wpaddinghalfem {
		padding-left: .5em;
	}
}
