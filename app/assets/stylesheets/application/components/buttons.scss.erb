// BUTTON STYLES
// -------------


// Colors
// ------

.btn, form .submit_bar input {
  border: solid 1px $grayLight;
  white-space: nowrap;

  // Set text color
  &.btn-primary,
  &.btn-primary:hover,
  &.btn-danger,
  &.btn-danger:hover,
  &.btn-success,
  &.btn-success:hover,
  &.btn-info,
  &.btn-info:hover {
    color: $black;
    background-color: $white;
  }
  &.btn-primary.active,
  &.btn-danger.active,
  &.btn-success.active,
  &.btn-info.active {
    color: rgba(255,255,255,.75);
  }
  &.btn-primary {
    color: $white;
    background-color: $primary;
    border: solid 1px $primaryDark;

    &:hover {
      color: $white !important;
      background-color: $primaryDark;
      border: solid 1px $primary;
    }

    &.active {
      color: $grayDark !important;
      outline: none;
      border: solid 1px $black;
    }
  }
  // Danger and error appear as red
  &.btn-danger, &.deny{
    color: $redLight !important;
    border-color: $redLight !important;

    :hover {
      border-color: $redDark !important;
      color: $redDark !important;
    }

  }
  // Success appears as green
  &.btn-success {
    border-color: $green;

    &:hover {
      border-color: $greenDark;
    }

  }
  // Info appears as a neutral blue
  &.btn-info {
    border-color: $blue;
  }

  &.clear {
    background: none;
    border-color: $gray;
  }
}

// Base styles
// -----------

.btn, .handle, form .submit_bar input {
  // Button Base
  display: inline-block;
  padding: 5px 10px;
  @include no-box-shadow;
  @include border-radius(2px);
  font-size: $basefont - 1;
  cursor: pointer;
  text-decoration: none;
  background-color: #fff;

  @include ie7-restore-left-whitespace;

  &:hover {
    color: #003366 !important;
    border: solid 1px #2f84da;
    text-decoration: none;
  }

  // Focus state for keyboard and accessibility
  &:focus {
    //.tab-focus();
  }

  // Active and Disabled states
  &.active,
  &:active {
    color: #333 !important;
    outline: none;
    border: solid 1px $black;
  }
  &.disabled,
  &[disabled] {
    cursor: default;
    background-color: darken($white, 10%);
    @include opacity(65);
    color: $gray !important;
    border: solid 1px $grayLighter;
  }

  // Button Sizes
  &.btn-large {
    padding: 9px 14px;
    font-size: $baseFontSize;
    letter-spacing: normal;
    line-height: normal;
    @include border-radius(5px);
  }
  &.btn-pronounced {
    font-size: $baseFontSize + 2px;
  }
  &.btn-large .icon {
    margin-top: 1px;
  }
  &.btn-small {
    padding: 0px 5px;
    font-size: $basefont - 3px;
  }
  &.btn-small .icon {
    margin-top: -1px;
  }

  .badge {
    background: $gray;
    color: $white;
    font-weight: normal;
    text-shadow: 0 0 0;
  }
  &.active .badge {
    background: darken($gray, 15%);
  }

}

// Help Firefox not be a jerk about adding extra padding to buttons
button.btn,
input[type="submit"].btn {
  &::-moz-focus-inner {
  	padding: 0;
  	border: 0;
  }
  line-height: inherit;

  // IE7 has some default padding on button controls
  *padding-top: 2px;
  *padding-bottom: 2px;
  &.btn-large {
    *padding-top: 7px;
    *padding-bottom: 7px;
  }
  &.btn-small {
    *padding-top: 3px;
    *padding-bottom: 3px;
  }
  @include transition(none);

  &:active {
    @include box-shadow(inset 0 0 6px $black);
    color: #333 !important;
    text-shadow: 0 -1px 0px #eee;
    outline: none;
    border: solid 1px $black;
  }
}

// Links with Highlights
//----------------
// these are not normal buttons per se but rather links with background highlights
// when the user hovers over them

.link-hl {
  padding: 1px;
  padding-right: 3px;

  &:hover {
    background: $concerto-blue-5;
    color: $concerto-blue-0;
    text-decoration: none;
  }
}
