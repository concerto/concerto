<section class="viewblock">
  <header class="viewblock-header">
    <div class="viewblock-header_right">
      <div class="button-padding">
        <% if can? :create, User %>
          <%= link_to t(:new_model, :model => User.model_name.human), new_user_path, :class => "btn" %>
        <% end %>
      </div>
    </div>
    <h1 class="default-padding">
      <%= t(:all_model, :model => User.model_name.human.pluralize) %>
    </h1>
  </header>
  <div class="viewblock-cont">
    <table>
      <tr>
        <th><%= User.human_attribute_name(:first_name) %></th>
        <th><%= User.human_attribute_name(:last_name) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:actions) %></th>
      </tr>

      <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to t(:show), user %> <%= link_to t(:edit), edit_user_path(user) %> <%= link_to t(:destroy), user, :data => { :confirm => t(:are_you_sure) }, :method => :delete %></td>
          </tr>
      <% end %>
    </table>

    <div class="pagination-cont default-padding" style="padding-top: 0px; padding-bottom: 0px;">
      <%= paginate @users %>
    </div>
  </div>
  
</section>
