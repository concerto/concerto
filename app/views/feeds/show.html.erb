<%= page_title "#{@feed.name}" %>

<div id="<%= dom_id @feed %>">
  <!-- Feed Header -->
  <div class="card mb-6">
    <div class="card-body">
      <div class="border-b border-neutral-200 pb-4 mb-6">
        <div class="flex flex-col sm:flex-row gap-4 justify-between items-start sm:items-center">
          <div>
            <h1 class="text-h2 text-neutral-900"><%= @feed.name %></h1>
          </div>
          <div class="flex gap-3">
            <% if policy(@feed).edit? %>
              <%= link_to "Edit Feed", edit_feed_path(@feed), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>

      <dl class="space-y-6">
        <!-- Description -->
        <% if @feed.description.present? %>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <dt class="text-body font-medium text-neutral-700">Description</dt>
            <dd class="text-body text-neutral-900 sm:col-span-2">
              <%= @feed.description %>
            </dd>
          </div>
        <% end %>

        <!-- Managers -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <dt class="text-body font-medium text-neutral-700">Managers</dt>
          <dd class="text-body text-neutral-900 sm:col-span-2">
            <%= link_to @feed.group.name, @feed.group %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Content Section -->
  <div class="card mb-6">
    <div class="card-body">
      <div class="border-b border-neutral-200 pb-4 mb-6">
        <div class="flex items-center justify-between">
          <h2 class="text-h3 text-neutral-900">Content</h2>
          <div class="flex items-center gap-4">
            <span class="text-caption text-neutral-700">
              <%= pluralize(@feed.content.count, 'item') %>
            </span>
          </div>
        </div>
      </div>

      <% unless @feed.content.exists? %>
        <div class="text-center py-12">
          <div class="text-neutral-500 mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-body font-medium text-neutral-900 mb-2">No content available</h3>
          <p class="text-body text-neutral-700 mb-6">This feed has no content yet. Consider uploading some content to get started.</p>
          <% if policy(Content).create? %>
            <%= link_to "Add Content", new_content_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% else %>
        <%= render partial: "contents/grid", locals: {contents: @feed.content} %>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="card">
    <div class="card-body">
      <div class="flex flex-col sm:flex-row gap-6 justify-between items-start sm:items-center">
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to "Back to Feeds", feeds_path, class: "btn btn-secondary" %>
        </div>
        
        <% if policy(@feed).destroy? %>
          <div class="flex-shrink-0">
            <%= button_to "Delete this Feed", feed_path(@feed),
                method: :delete,
                class: "btn btn-danger",
                form_class: "inline-block",
                form: { data: {
                  turbo_confirm: "Are you sure you want to delete this feed? This action cannot be undone."
                } } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
