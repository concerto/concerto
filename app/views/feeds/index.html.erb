<div class="row-fluid">
  <div class="span9">
    <section class="viewblock">
      <header class="viewblock-header" id="browse-header">
        <%= render :partial => "feeds/browse_header" %>
      </header>
      <div id="browse-body" class="viewblock-cont">
        <%= render :partial => "feeds/browse_body" %>
        
      </div>
    </section>
  </div>
  <div class="span3">
    <% if user_signed_in? %>
    <section class="viewblock">
      <header class="viewblock-header">
        <h1 class="default-padding"><%= t('.my_concerto') %></h1>
      </header>
      <div class="viewblock-cont">
        <div class="default-padding">
          <p><%= t('.belong_to_groups') %></p>
          <ul>
          <% current_user.groups.each do |group| %>
            <li><%= link_to group.name, group %></li>
          <% end %>
          </ul>
          <%= render :partial => 'activities/show' %>
        </div>
        
      </div>
    </section>
    <% end %>

    <section class="viewblock">
      <header class="viewblock-header">
        <h1 class="default-padding"><%= t('.network_vitals') %></h1>
      </header>
      <div class="viewblock-cont">
        <div class="default-padding">
          <div class="clearfix">
            <h2><%= pluralize @screens.count, t('.screen') %></h2>
            <p><%= @screens.count{|s| s.is_online? } %> <%= t('.active') %>&nbsp;&nbsp;&nbsp;&nbsp;<%= @screens.count{|s| s.is_offline? } %> <%= t('.offline') %></p>
            <%= link_to t('.view_screens_list'), screens_path, :class => "btn" %>
          </div>
          <br /><br />
          <div class="clearfix">
            <h3><%= t(:current_active_approved_content) + ": " + @active_content.to_s %></h3>
          </div>
        </div>
        
      </div>
    </section>
  </div>
</div>
