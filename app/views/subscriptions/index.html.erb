<h1>Listing <%= @screen.name %> subscriptions</h1>

<table>
  <tr>
    <th>Feed</th>
    <th>Field</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subscriptions.each do |subscription| %>
  <tr>
    <td><%= subscription.feed.name unless subscription.feed.nil? %></td>
    <td><%= subscription.field.name  unless subscription.field.nil? %></td>
    <td><%= subscription.weight %></td>
    <td><%= link_to t(:edit), edit_screen_field_subscription_path(@screen, subscription.field, subscription) %></td>
    <td><%= link_to t(:destroy), [@screen, subscription.field, subscription], :data => {:confirm => t(:are_you_sure_remove_model_key, :model => Subscription.model_name.human, :key => subscription.feed.name)}, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_model, :model => Subscription.model_name.human), new_screen_field_subscription_path(@screen, @field) %> |
<%= link_to t(:manage_model, :model => Subscription.model_name.human.pluralize), manage_screen_field_subscriptions_path(@screen, @field) %>
