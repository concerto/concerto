<section class="viewblock">
  <header class="viewblock-header">
    <div class="viewblock-header_right default-padding">  &nbsp;
    </div>
    <h1 class="default-padding"><%= t(:add) + " " + @content.class.display_name + " " + t(:content) %></h1>
  </header>
  <div class="viewblock-cont">

    <div class="subnav clearfix">
      <ul class="nav nav-tabs">
        <% available_types = get_available_types() %> 
        <% available_types.each do |subclass| %>
          <li <% if @content.class.name == subclass.name %> class="active"<% end %>>
            <%= link_to subclass.display_name, new_content_path( type: subclass.model_name.singular) %>
          </li>
        <% end %>
      </ul>
    </div>

    <%= render 'form' %>
  </div>
</section>
