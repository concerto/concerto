<fieldset>
  <legend><span><%=t('.type_your_message')%></span></legend>

  <div class="clearfix">
    <%= label_tooltip "ticker", :kind_id, t('.display_format'), :tip => t('.display_format_tip') %>
    <div class="input">
      <%= form.collection_select :kind_id, Kind.where(:name => ['Ticker', 'Text']), :id, :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= form.text_area :data, :class => 'word_count fillWidth tinymce', :rows => 3, :autofocus => true, "data-url" => preview_contents_path %>
  </div>
  <%= tinymce %>

</fieldset>
