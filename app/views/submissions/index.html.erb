
<h1>Submissions</h1>

<div id="submissions">
  <% @submissions.each do |submission| %>
    <%= render submission %>
    <p>
      <%= link_to "Show this submission", submission %>
    </p>
  <% end %>
</div>

<% if policy(Submission).create? %>
  <%= link_to "New submission", new_submission_path %>
<% end %>
