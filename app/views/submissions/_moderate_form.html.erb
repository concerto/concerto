<%= form_for([submission.feed, submission]) do |f| %>
  <% if moderate %>
    <div class="clearfix">
      <%= f.label :duration %>
      <div class="input">
        <%= f.number_field :duration, :style => "width: 50px;", :autofocus => true %>
      </div>
    </div>
    <%= f.hidden_field :moderation_flag, { :value => true }%>
  <% else %>
    <div class="clearfix">
      <%= f.label :moderation_reason %>
      <div class="input">
        <%= f.text_area :moderation_reason, :rows => 5, :style => "width: 90%;", :autofocus => true %>
      </div>
    </div>
    <%= f.hidden_field :moderation_flag, { :value => false }%>
  <% end %>
  <%= f.submit moderate ? t(:approve) : t(:deny) , :class => "btn primary" "Moderate Content", :class => "btn primary" %>
<% end %>
