$("#browse-header").html("<%= escape_javascript(render :partial => 'submissions/show_header') %>");
$("section.C").removeClass("no");
$("#browse-body").html("<%= escape_javascript(render :partial => 'submissions/show_body') %>");

$(document).on("click", "#moderate-select button.approve", function(event) {
  event.preventDefault();
  $("#moderate-include")
    .slideUp("fast", function() {
      $(this)
        .empty()
        .append("<%= escape_javascript(render :partial => 'submissions/moderate_form', :locals => { :submission => @submission, :moderate => true } ) %>")
        .slideDown("fast");
    });
});

$(document).on("click", "#moderate-select button.deny", function(event) {
  event.preventDefault();
  $("#moderate-include")
    .slideUp("fast", function() {
      $(this)
        .empty()
        .append("<%= escape_javascript(render :partial => 'submissions/moderate_form', :locals => { :submission => @submission, :moderate => false } ) %>")
        .slideDown("fast");
    });
});


