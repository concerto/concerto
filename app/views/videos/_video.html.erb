<div id="<%= dom_id video %>">
  <!-- Content Preview -->
  <div class="card mb-6">
    <div class="card-body">
      <div class="flex justify-center">
        <% if video.video_source == "youtube" %>
          <iframe
                  class="rounded-lg shadow-sm border border-neutral-200"
                  width="600"
                  height="480"
                  src="https://www.youtube-nocookie.com/embed/<%= video.video_id %>?rel=0&iv_load_policy=3"
                  allow="autoplay; encrypted-media"
                  allowfullscreen
                  loading="lazy">
          </iframe>
        <% elsif video.video_source == "vimeo" %>
          <iframe
                  class="rounded-lg shadow-sm border border-neutral-200"
                  width="600"
                  height="480"
                  src="https://player.vimeo.com/video/<%= video.video_id %>"
                  allow="autoplay; encrypted-media"
                  allowfullscreen
                  loading="lazy">
          </iframe>
        <% elsif video.video_source == "tiktok" %>
          <iframe
                  class="rounded-lg shadow-sm border border-neutral-200"
                  width="600"
                  height="480"
                  src="https://www.tiktok.com/player/v1/<%= video.video_id %>"
                  allow="autoplay; encrypted-media"
                  allowfullscreen
                  loading="lazy">
          </iframe>
        <% else %>
          <div class="text-center py-12">
            <p class="text-body text-neutral-500">Unsupported video source</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "contents/show_details", content: video %>
</div>