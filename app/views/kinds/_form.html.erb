<%= form_for(@kind) do |f| %>
    <% if @kind.errors.any? %>
        <div class="alert alert-banner alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h4><b><%= pluralize(@kind.errors.count, t(:error)) + t(:prohibited_save, :model => Kind.model_name.human.downcase) %></b></h4>

          <ul>
            <% @kind.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <div class="inline-inputs">
            <%= f.text_field :name, :autofocus => true %>
          </div>
        </div>
      </div>
    </fieldset>

    <div class="submit_bar actions">
      <%= f.submit button_text, :class => "btn btn-primary" %> <%= link_to_function t(:cancel), "history.back()", :class => "btn" %>
    </div>
<% end %>
