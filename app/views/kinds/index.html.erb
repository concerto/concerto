<section class="viewblock">
  <header class="viewblock-header">
    <h1 class="default-padding"><%= t(:all_kinds) %> <%= link_to t(:new_kind), new_kind_path, :class => "button" %></h1>
  </header>
  <div class="viewblock-cont">
    <table>
      <tr>
        <th><%= t(:name) %></th>
        <th><%= t(:actions) %></th>
      </tr>

      <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.name %></td>
            <td><%= link_to t(:show), kind %> <%= link_to t(:edit), edit_kind_path(kind) %> <%= link_to t(:destroy), kind, :data => {:confirm => t(:are_you_sure)}, :method => :delete %></td>
          </tr>
      <% end %>
    </table>

  </div>
</section>
