<section class="viewblock">
  <header class="viewblock-header">
    <h1 class="default-padding"><%= t(:all_model, :model => Kind.model_name.human.pluralize) %> <%= link_to t(:new_model, :model => Kind.model_name.human), new_kind_path, :class => "button" %></h1>
  </header>
  <div class="viewblock-cont">
    <table>
      <tr>
        <th><%= Kind.human_attribute_name(:name) %></th>
        <th><%= Kind.human_attribute_name(:actions) %></th>
      </tr>

      <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.name %></td>
            <td><%= link_to t(:show), kind %> <%= link_to t(:edit), edit_kind_path(kind) %> <%= link_to t(:destroy), kind, :data => {:confirm => t(:are_you_sure_delete_model_key, :model => Kind.model_name.human, :key => kind.name)}, :method => :delete %></td>
          </tr>
      <% end %>
    </table>

  </div>
</section>
