<%= form_for(@concerto_plugin) do |f| %>
  <% if @concerto_plugin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@concerto_plugin.errors.count, t(:error)) %> <%= t(:prohibited_save) %></h2>

      <ul>
      <% @concerto_plugin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :autofocus => true %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :module_name %>
      <div class="input">
        <%= f.text_field :module_name %>
      </div>
    </div>

    <div class="clearfix">
      <div class="input">
        <%= f.check_box :enabled %> 
        <%= f.label :enabled %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :gem_name %>
      <div class="input">
        <%= f.text_field :gem_name %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :gem_version %>
      <div class="input">
        <%= f.text_field :gem_version %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :source %>
      <div class="input">
        <%= f.select(:source, [[t('.source_rubygems'), 'rubygems'], [t('.source_git_repo'), 'git'], [t('.source_filesystem_path'), 'path']]) %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :source_url %>
      <div class="input">
        <%= f.text_field :source_url %>
      </div>
    </div>

  </fieldset>

  <div class="submit_bar actions">
    <%= f.submit button_text, :class => "btn primary" %> <%= link_to_function t('concerto_plugins.cancel'), "history.back()", :class => "btn" %>
  </div>
<% end %>
