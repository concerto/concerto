<%= render partial: 'dashboard/admin_stats' %>

<section class="viewblock">
  <header class="viewblock-header">
    <h1 class="default-padding">
      <%= t :concerto_plugins %>
    </h1>
  </header>
  <div class="viewblock-cont" style="min-height: 600px;">

    <%= render partial: 'plugins_navigation' %>

    <% @concerto_plugins.each do |concerto_plugin| %>
      <li>
        <h3>
          <%= link_to concerto_plugin_path(concerto_plugin), class: "link-hl" do %>
            <span class="badge"><%= concerto_plugin.enabled ? t(:enabled) : t(:disabled)%></span> <%= concerto_plugin.name %>
          <% end %>
          <small><%= link_to t(:edit), edit_concerto_plugin_path(concerto_plugin) %></small>
          <%= link_to t(:destroy), concerto_plugin, data: { confirm: 'Are you sure?'}, method: :delete %>
        </h3>
      </li>
    <% end %>

    <div class="default-padding">
      <%= link_to t(:new_plugin), new_concerto_plugin_path, class: "btn" %>
    </div>

  </div>
</section>
