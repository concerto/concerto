<%= form_for(@template, :html => { :multipart => true }) do |f| %>
  <% if @template.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@template.errors.count, t(:error)) + t(:prohibited_save, :model => ::Template.model_name.human) %></h2>
    <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :autofocus => true %>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :author %>
      <div class="input">
        <%= f.text_field :author %>
      </div>
    </div>

    <div class="clearfix">
      <div class="input">
        <%= f.check_box :is_hidden %> <%= f.label :is_hidden %>
      </div>
    </div>
  </fieldset>

  <div class="submit_bar actions">
    <%= f.submit button_text, :class => "btn primary" %> <%= link_to_function t(:cancel), "history.back()", :class => "btn" %>
  </div>
<% end %>
